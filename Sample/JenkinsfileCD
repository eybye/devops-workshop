pipeline {
  agent none
  stages {
    stage('Docker build') {
      agent any
      steps {
        sh 'docker build -t devops/aspnetmvc:latest Sample'
      }
    }
    stage('Stop existing container') {
      agent any
      steps {
        script {
          try {
            sh  '''
              docker rm -f aspnetmvc
            '''
          }
          catch (exc) {
              echo 'Container was not running'
          }
        }
      }
    }
    stage('Docker deploy') {
      agent any
      steps {
        sh 'docker run -d --name=aspnetmvc -p 8100:80 devops/aspnetmvc:latest'
      }
    }
  }
}